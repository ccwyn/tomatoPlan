.container {
    display: flex;
    height: 100%;
    flex-direction: column;
    overflow: hidden;
    background-color: #fff;
}

.timer_main {
    position: relative;
    display: flex;
    flex: 2;
    justify-content: center;
    align-items: center;
    padding: 30px 0 10px;
    text-align: center;
    /* background-color: #3197ed; */
    transition: all .5s;
    z-index: 1;
}

.timer_time-wrap {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 156px;
    height: 156px;
    text-align: center;
    transition: all .3s;
}

.timer_progress {
    position: absolute;
    top: 0;
    width: 78px;
    height: 156px;
    overflow: hidden;
    transition: all .3s;
}

.timer_progress_mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    border: 14rpx solid #333;
    opacity: .8;
    border-radius: 20rpx;
}

.timer_left {
    left: 0;
}

.timer_right {
    right: 0;
}

.timer_circle {
    position: absolute;
    top: 0;
    width: 148px;
    height: 148px;
    border: 4px solid transparent;
    border-radius: 50%;
    transition: all .3s;
}

.timer_circle--left {
    left: 0;
    border-left: 5px solid #fff;
    border-bottom: 5px solid #3197ed;
    transform: rotate(45deg);
}

.timer_circle--right {
    right: 0;
    border-right: 5px solid #48c23d;
    border-bottom: 5px solid #fff;
    transform: rotate(-45deg);
}

.timer_time {
    font-size: 40px;
    color: #333;
    font-weight: lighter;
    transition: font-size .3s;
}

.timer_taskName {
    position: absolute;
    top: -100px;
    font-size: 14px;
    letter-spacing: 5px;
    color: #fff;
}

.timer_done {
    height: 64px;
    line-height: 64px;
    font-size: 68rpx;
    font-weight: bold;
    text-align: center;

}

.timer_inputname {
    position: absolute;
    bottom: -40px;
    width: 100%;
    text-align: center;
    height: 40px;
    padding-left: 10px;
    border-bottom: 1px solid #f2f2f2;
    color: #999;
}

.timer_footer {
    justify-content: center;
    align-items: center;
    /* transition: all .3s; */
    width: 280px;
    margin: 0 auto;
}

.timer .timer_ctrl {
    float: left;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 14px;
    color: #fff;
    width:100px;
    margin: 15px 20px;
    padding: 20rpx 0;
    border-radius: 6rpx;
    transition: all .7s;
    background-color: #333;
}

#btn-work {
    background-color: #3197ed;
}

#btn-rest {
    background-color: #48c23d;
}

#btn-study {
    background-color: #66CCFF;
}

#btn-sport {
    background-color: #FF0000;
}

#btn-summary {
    background-color: #66CC66;
}

.timer--runing .timer_main {
    flex: 1;
}

.timer--runing .timer_time {
    font-size: 45px;
}

.timer--runing .timer_time-wrap {
    width: 156px;
    height: 156px;
}

.timer--runing .timer_progress {
    width: 78px;
    height: 156px;
}

.timer--runing .timer_circle {
    width: 148px;
    height: 148px;
}

.timer--runing .timer_footer {
    flex: 0;
    position: absolute;
    bottom: 0;
    width: 100%;
    z-index: 10;
}

.timer--runing .timer_ctrl {
    background-color: #208DEA;
    height: 30px;
    margin-bottom: 30px;
    border: 1px dashed #dedede;
    border-radius: 20px;
}

.task-tip {
    margin: 10px auto;
    font-size: 16px;
    width: 80%;
}

.text-center {
    text-align: center;
}

.select-title {
    margin-top: 10px;
}

.btn-action {
